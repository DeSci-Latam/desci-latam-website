---
import { getRelativeLocaleUrl } from "astro:i18n";
import { useTranslations, type Lang } from "@/i18n";
import { ThemeToggle } from "@/components/theme-toggle";
import Search from "@/components/search/Search";
import LocaleSelect from "@/components/i18n/LocaleSelect";
import { TailcastLogo } from "../assets/logos/TailcastLogo";

const t = useTranslations(Astro.currentLocale as Lang);
const locale = Astro.currentLocale as Lang;

const isActive = (path: string) =>
  getRelativeLocaleUrl(locale, path) === Astro.url.pathname;
---

<header class="fixed w-full z-40 bg-background border-b border-gray-800">
  <div class="max-w-[1304px] mx-auto">
    <div class="h-16 flex items-center justify-between px-2">
      <!-- Left Section: Menu + Logo -->
      <div class="flex items-center gap-4">
        <div class="drawer flex lg:hidden gap-4">

          <div></div>
          <input id="drawer-mobile" type="checkbox" class="drawer-toggle" />
          
          <!-- Menu Button -->
          <label for="drawer-mobile" class="drawer-button">
            <div class="drawer-toggle-default ">
              <svg
                xmlns="http://www.w3.org/2000/svg"
                width="24"
                height="24"
                viewBox="0 0 24 24"
                fill="none"
                stroke="currentColor"
                stroke-width="2"
                class="text-gray-200"
              >
                <path d="M3 12h18M3 6h18M3 18h18"></path>
              </svg>
            </div>
            <div class="drawer-toggle-close">
              <svg
                xmlns="http://www.w3.org/2000/svg"
                width="24"
                height="24"
                viewBox="0 0 24 24"
                fill="none"
                stroke="currentColor"
                stroke-width="2"
                class="text-gray-200"
              >
                <path d="M18 6L6 18M6 6l12 12"></path>
              </svg>
            </div>
          </label>

          <!-- Logo -->
          <a href={getRelativeLocaleUrl(locale, "/")} class="flex items-center">
            <TailcastLogo />
          </a>

          <!-- Drawer Content -->
          <div class="drawer-side top-[75px] ">
            <label for="drawer-mobile" class="drawer-overlay "></label>
            <div class="w-[280px] min-h-screen bg-background flex flex-col pb-[75px]">
              <!-- Nav Content -->
              <nav class="flex-1 overflow-y-auto px-4 py-6">
                <!-- Comunidad -->
                <details class="menu-group">
                  <summary class="menu-item">
                    <span>{t({ es: "Comunidad", en: "Community", pt: "Communidade" })}</span>
                    <svg class="menu-arrow" viewBox="0 0 24 24">
                      <path d="M6 9l6 6 6-6"/>
                    </svg>
                  </summary>
                  <a 
                    href={getRelativeLocaleUrl(locale, "/changelog")}
                    class="menu-subitem"
                  >
                    {t({ es: "Changelog", en: "Changelog", pt: "Changelog" })}
                  </a>
                </details>

                <!-- Ecosistema -->
                <details class="menu-group">
                  <summary class="menu-item">
                    <span>{t({ es: "Ecosistema", en: "Ecosystem", pt: "Ecosistema" })}</span>
                    <svg class="menu-arrow" viewBox="0 0 24 24">
                      <path d="M6 9l6 6 6-6"/>
                    </svg>
                  </summary>
                  <a 
                    href={getRelativeLocaleUrl(locale, "/ecosystem/funding/")}
                    class="menu-subitem"
                  >
                    {t({ es: "Financiamiento", en: "Funding", pt: "Financiamento" })}
                  </a>
                </details>

                <!-- Blog -->
                <a href={getRelativeLocaleUrl(locale, "/blog")} class="menu-item">
                  <span>{t({ es: "Blog", en: "Blog", pt: "Blog" })}</span>
                </a>
              </nav>

              <!-- Drawer Footer -->
              <div class="border-t border-gray-800  p-4">
                <div class="flex items-center justify-between">
                  <LocaleSelect />
                  <ThemeToggle client:load />
                </div>
              </div>
            </div>
          </div>
        </div>

        <div class="drawer hidden lg:flex gap-4">

          <!-- Logo -->
          <a href={getRelativeLocaleUrl(locale, "/")} class="flex items-center">
            <TailcastLogo />
          </a>

          <!-- Drawer Content -->
          <div class="drawer-side top-[75px] ">
            <label for="drawer-mobile" class="drawer-overlay "></label>
            <div class="w-[280px] min-h-screen bg-background flex flex-col pb-[65px]">
              <!-- Nav Content -->
              <nav class="flex-1 overflow-y-auto px-4 py-6">
                <!-- Comunidad -->
                <details class="menu-group">
                  <summary class="menu-item">
                    <span>{t({ es: "Comunidad", en: "Community", pt: "Communidade" })}</span>
                    <svg class="menu-arrow" viewBox="0 0 24 24">
                      <path d="M6 9l6 6 6-6"/>
                    </svg>
                  </summary>
                  <a 
                    href={getRelativeLocaleUrl(locale, "/changelog")}
                    class="menu-subitem"
                  >
                    {t({ es: "Changelog", en: "Changelog", pt: "Changelog" })}
                  </a>
                </details>

                <!-- Ecosistema -->
                <details class="menu-group">
                  <summary class="menu-item">
                    <span>{t({ es: "Ecosistema", en: "Ecosystem", pt: "Ecosistema" })}</span>
                    <svg class="menu-arrow" viewBox="0 0 24 24">
                      <path d="M6 9l6 6 6-6"/>
                    </svg>
                  </summary>
                  <a 
                    href={getRelativeLocaleUrl(locale, "/ecosystem/funding/")}
                    class="menu-subitem"
                  >
                    {t({ es: "Financiamiento", en: "Funding", pt: "Financiamento" })}
                  </a>
                </details>

                <!-- Blog -->
                <a href={getRelativeLocaleUrl(locale, "/blog")} class="menu-item">
                  <span>{t({ es: "Blog", en: "Blog", pt: "Blog" })}</span>
                </a>
              </nav>

              <!-- Drawer Footer -->
              <div class="border-t border-gray-800  p-4">
                <div class="flex items-center justify-between">
                  <LocaleSelect />
                  <ThemeToggle client:load />
                </div>
              </div>
            </div>
          </div>
        </div>
        <!-- Desktop Navigation -->
        <nav class="hidden lg:flex items-center space-x-6">
          <div class="dropdown flex dropdown-hover">
            <div tabindex={0} role="button" class="nav-button">
              <span>{t({ es: "Comunidad", en: "Community", pt: "Communidade" })}</span>
              <svg class="nav-arrow" viewBox="0 0 24 24">
                <path d="M6 9l6 6 6-6"/>
              </svg>
            </div>
            <ul tabindex={0} class="dropdown-content">
              <li>
                <a href={getRelativeLocaleUrl(locale, "/changelog")}>
                  {t({ es: "Changelog", en: "Changelog", pt: "Changelog" })}
                </a>
              </li>
            </ul>
          </div>

          <div class="dropdown flex dropdown-hover">
            <div tabindex={0} role="button" class="nav-button">
              <span>{t({ es: "Ecosistema", en: "Ecosystem", pt: "Ecosistema" })}</span>
              <svg class="nav-arrow" viewBox="0 0 24 24">
                <path d="M6 9l6 6 6-6"/>
              </svg>
            </div>
            <ul tabindex={0} class="dropdown-content">
              <li>
                <a href={getRelativeLocaleUrl(locale, "/ecosystem/funding/")}>
                  {t({ es: "Financiamiento", en: "Funding", pt: "Financiamento" })}
                </a>
              </li>
            </ul>
          </div>

          <a
            href={getRelativeLocaleUrl(locale, "/blog")}
            class:list={["nav-button", { active: isActive("/blog") }]}
          >
            {t({ es: "Blog", en: "Blog", pt: "Blog" })}
          </a>
        </nav>
      </div>

      <!-- Right Section: Search + Controls -->
      <div class="flex items-center gap-4">
        <Search client:load />
        <div class="hidden lg:flex items-center gap-4">
          <ThemeToggle client:load />
          <LocaleSelect />
        </div>
      </div>
    </div>
  </div>
</header>

<style>
  /* Drawer button styles */
  .drawer-button {
    @apply w-10 h-10 flex items-center justify-center cursor-pointer;
  }

  .drawer-toggle-default,
  .drawer-toggle-close {
    @apply absolute transition-all duration-300;
  }

  .drawer-toggle-close {
    opacity: 0;
    transform: rotate(-90deg);
  }

  .drawer-toggle:checked ~ * .drawer-toggle-default {
    opacity: 0;
    transform: rotate(90deg);
  }

  .drawer-toggle:checked ~ * .drawer-toggle-close {
    opacity: 1;
    transform: rotate(0);
  }

  /* Drawer overlay */
  .drawer-overlay {
    @apply bg-black/40 backdrop-blur-sm opacity-0 transition-opacity duration-300;
  }

  .drawer-toggle:checked ~ .drawer-side .drawer-overlay {
    @apply opacity-100 ;
  }

  /* Menu styles */
  .menu-group {
    @apply border-b border-gray-800;
  }

  .menu-item {
    @apply flex items-center justify-between py-3 px-4 text-gray-300 hover:text-white hover:bg-gray-800/50 rounded-lg cursor-pointer;
  }

  .menu-subitem {
    @apply block py-2 px-8 text-gray-300 hover:text-white hover:bg-gray-800/50 rounded-lg;
  }

  .menu-arrow {
    @apply w-4 h-4 stroke-current fill-none stroke-2;
  }

  /* Desktop navigation */
  .nav-button {
    @apply btn btn-ghost btn-sm text-gray-300 hover:text-white flex items-center gap-1 h-8 min-h-0 px-3;
  }

  .nav-arrow {
    @apply w-4 h-4 stroke-current fill-none stroke-2;
  }

  .dropdown-content {
    @apply menu bg-background border border-gray-800 rounded-lg p-2 shadow-lg mt-2 min-w-[200px];
  }

  /* Custom scrollbar */
  .overflow-y-auto {
    scrollbar-width: thin;
    scrollbar-color: theme('colors.gray.700') transparent;
  }

  .overflow-y-auto::-webkit-scrollbar {
    @apply w-1;
  }

  .overflow-y-auto::-webkit-scrollbar-track {
    @apply bg-transparent;
  }

  .overflow-y-auto::-webkit-scrollbar-thumb {
    @apply bg-gray-700 rounded-full;
  }
</style>

<script>
  function setupDrawer() {
    const drawer = document.getElementById('drawer-mobile') as HTMLInputElement;
    
    if (drawer) {
      // Manejar el scroll del body
      drawer.addEventListener('change', () => {
        document.body.style.overflow = drawer.checked ? 'hidden' : '';
      });

      // Cerrar drawer al hacer clic en links
      document.querySelectorAll('.drawer-side a').forEach(link => {
        link.addEventListener('click', () => {
          drawer.checked = false;
          document.body.style.overflow = '';
        });
      });
    }
  }

  // Setup inicial
  setupDrawer();

  // Setup en navegación
  document.addEventListener('astro:page-load', setupDrawer);
</script>