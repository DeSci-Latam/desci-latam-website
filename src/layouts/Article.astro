---
// Layout for pages such as articles or documents
// Nested in Base layout

import BaseHead from "../components/BaseHead.astro";
import Layout from "./Base.astro";
import MainLayout from "./main-layout.astro";
import { cn, formatDate } from "../lib/utils";
import { buttonVariants } from "../components/ui/button";
import { Icon } from "astro-icon/components";
import { Image } from "astro:assets";

interface Props {
  title?: string;
  description?: string;
  frontmatter?: undefined;
  slug?: string;  // Agregamos la propiedad slug
}

const { slug, title, description } = Astro.props.frontmatter || Astro.props;
---

<Layout title={title} description={description}>
  <div class="relative container max-w-screen-md ">
    <div class="">
      <button
        onclick="history.back()"
        class={cn(
          buttonVariants({ variant: "ghost" }),
          "absolute left-[-200px]  hidden xl:inline-flex text-muted-foreground"
        )}
        transition:animate="slide"
      >
        <Icon name="lucide:chevron-left" class="mr-2 size-4" />
        {""} Back
      </button>

      <article data-pagefind-body class="prose dark:prose-invert max-w-none">
        <div class="flex items-center justify-between">
          <span
            class="font-medium text-muted-foreground"
            transition:name={`date-${slug}`}
          >
          </span>
        </div>
        <slot />
      </article>
    </div>
  </div>
</MainLayout>
