      <div class="max-w-[20vw] flex m-auto">
        <div class="">
          <Image src={Hero} alt="DeSci LATAM" />
        </div>
      
      </div>
      
      <div class="flex justify-center font-bold text-xl">
        <p class="text-white">
          {
            t({
              es: "Batalla de ciencia",
              en: "August 12th and 13th",
              pt: "12 e 13 de agosto",
            })
          }
        </p>
      </div>

        <div
          class="container  flex flex-wrap-reverse justify-center lg:flex-nowrap  gap-5 "
        >
        <div class="min-w-[720px]">
<iframe data-tally-src="https://tally.so/embed/woOzDO?alignLeft=1&hideTitle=1&transparentBackground=1&dynamicHeight=1" loading="lazy" width="100%" height="1318" frameborder="0" marginheight="0" marginwidth="0" title="Reader Feedback"></iframe>

